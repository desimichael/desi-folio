                      .title
                        i.fas.fa-code
                        p.font-w6 HTML
                      .title
                        i.fab.fa-css3-alt
                        p.font-w6 CSS
                      .title
                        i.fab.fa-js-square
                        p.font-w6 JAVASCRIPT
                    li.card-large.swiper-slide
                      .icon
                        i.fas.fa-laptop
                      .title
                        i.fab.fa-git-alt
                        p.font-w6 GIT
                      .title
                        i.fab.fa-laravel
                        p.font-w6 PHP LARAVEL (lite)
                      .title
                        i.fab.fa-shopify
