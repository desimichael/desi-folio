            section#section-3.bg-dark.font-color-white
              .container
                // Section Title
                .section-title.mx-a.maxw-400x.center.mb-3x
                  h2.mb-1x.font-color-dark-3x My Skills
                  h3.fluidz-30 Never Stop Learning..
                .carousel.swiper-container
                  ul.card-group.scroll-x.xxl-cursor-unset.xl-flex-group.flex-cc.swiper-wrapper
                    li.card-large.swiper-slide
                      .icon
                        i.fas.fa-laptop
                      .title
                        i.fab.fa-sass
